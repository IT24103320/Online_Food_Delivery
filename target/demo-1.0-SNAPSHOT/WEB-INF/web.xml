<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <servlet>
        <servlet-name>SubmitReviewServlet</servlet-name>
        <servlet-class>servlet.SubmitReviewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubmitReviewServlet</servlet-name>
        <url-pattern>/submitReview</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewReviewsServlet</servlet-name>
        <servlet-class>servlet.ViewReviewsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewReviewsServlet</servlet-name>
        <url-pattern>/viewReviews</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteReviewServlet</servlet-name>
        <servlet-class>servlet.DeleteReviewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteReviewServlet</servlet-name>
        <url-pattern>/deleteReview</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
